datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Comment {
  id          String   @id @default(cuid())
  postSlug    String
  parentId    String?
  authorName  String
  authorEmail String?
  emailHash   String?
  contentMd   String
  contentHtml String
  isApproved  Boolean  @default(false)
  isSpam      Boolean  @default(false)
  ipHash      String
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([postSlug])
  @@index([parentId])
  @@index([ipHash])
  @@index([postSlug, createdAt]) // fast listing per post
}

model RateEvent {
  id        String   @id @default(cuid())
  ipHash    String
  postSlug  String
  createdAt DateTime @default(now())

  @@index([ipHash])
  @@index([postSlug])
  @@index([createdAt])
  @@index([ipHash, postSlug, createdAt]) // for rate-limit lookups
}
